<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008080"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingTop="30dp">

        <!-- TransactionDate -->
        <TextView
            android:id="@+id/lblTransDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="10sp"
            android:text="Transaction Date"
            android:textColor="#A30014"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- ItemName -->
        <TextView
            android:id="@+id/lblItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblTransDate"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="10sp"
            android:text="Item Name"
            android:textColor="#F59A23"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Item Quantity -->
        <TextView
            android:id="@+id/lblItemQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblItemName"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="10sp"
            android:text="Item Quantity"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Minus Balance Value -->
        <TextView
            android:id="@+id/lblMinBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblItemQty"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="10sp"
            android:text="Minus Balance Value"
            android:textColor="#C280FF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>